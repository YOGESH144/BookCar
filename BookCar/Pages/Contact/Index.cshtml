@page
@model BookCar.Pages.Contact.IndexModel

@{
    ViewData["Title"] = "Contact Us";
}
<p>
    <a asp-page="Create" type="button" class="btn btn-info">Contact Us</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].sEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContactUs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.id" type="button" class="btn btn-info">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.id" type="button" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.id" type="button" class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
