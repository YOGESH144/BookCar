<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookCar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand  text-light" asp-area="" asp-page="/Index">Book Car</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>                    
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 font-weight-bold">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Booking/Index">Booking</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/CarRecord/Index">Car</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Contact/Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
        <div class="container">
            <main role="main" class="pb-3">
                <div class="row">
                    <div class="col-1-1 margin-bottom">
                        <img src="https://s3-ap-southeast-1.amazonaws.com/zoomcar/images/original/af33ba036920ea938ecb6065ecf26e5713146233.jpeg?1621938396" alt="Book Car" class="img-responsive" />
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted text-light text-muted bg-info">
            <div class="container text-light">
                &copy; 2021 - BookCar
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
</body>
</html>
