</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingCars[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingCars[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingCars[0].CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingCars[0].BookingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookingCars)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contact)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CarModel)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookingDate)
    </td>
    <td>
        <a asp-page="./Edit" asp-route-id="@item.id" type="button" class="btn btn-info">Edit</a> 
        <a asp-page="./Details" asp-route-id="@item.id" type="button" class="btn btn-info">Details</a>
        <a asp-page="./Delete" asp-route-id="@item.id" type="button" class="btn btn-info">Delete</a>
